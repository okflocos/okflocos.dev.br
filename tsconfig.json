{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "jsx": "preserve",
    "strictNullChecks": true,
    "baseUrl": ".",
    "verbatimModuleSyntax": true,
    "paths": {
      "@/components/*": [
        "src/components/*.astro"
      ],
      "@/components/vue/*": [
        "src/components/vue/*.vue"
      ],
      "@/layouts/*": [
        "src/layouts/*.astro"
      ],
      "@/utils/*": [
        "src/utils/*.ts"
      ],
      "@/server/*": [
        "src/server/*.ts"
      ],
      "@/style/*": [
        "src/style/*.scss"
      ]
    }
  },
}
